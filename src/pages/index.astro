---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Puzzle Pal | Home">
  <main class="flex w-full max-w-lg flex-col gap-3">
    <div>
      <div class="">Resources for puzzling.</div>
    </div>
    <div class="flex w-full max-w-md flex-col items-center gap-2 self-center">
      <a href="/shift" class="w-full">
        <div
          class="w-full rounded-full bg-teal-800 p-4 text-center text-2xl font-bold active:bg-teal-600"
        >
          Shift
        </div>
      </a>
      <a href="/conversions" class="w-full">
        <div
          class="w-full rounded-full bg-orange-800 p-4 text-center text-2xl font-bold active:bg-teal-600"
        >
          Conversions
        </div>
      </a>
      <a href="/morse" class="w-full">
        <div
          class="w-full rounded-full bg-sky-800 p-4 text-center text-2xl font-bold active:bg-teal-600"
        >
          Morse Code Translator
        </div>
      </a>
    </div>
  </main>
</Layout>
